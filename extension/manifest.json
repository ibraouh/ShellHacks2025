{
  "manifest_version": 3,
  "name": "Accessibility Tools Extension",
  "version": "1.0",
  "description": "A collection of accessibility tools for better web browsing experience",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Accessibility Tools"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
